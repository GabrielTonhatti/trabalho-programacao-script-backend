{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "standard",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "quotes": [
            "error",
            "double",
            {
                "allowTemplateLiterals": true
            }
        ], // aceita aspas duplas ou template strings
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "space-before-function-paren": [
            "error",
            "never"
        ]
    }
}
